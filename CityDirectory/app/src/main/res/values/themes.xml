<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CityDirectory" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Base.Theme.CityDirectory.Contact" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/navigate_before</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10sp</item>
    </style>

    <style name="Theme.CityDirectory" parent="Base.Theme.CityDirectory">
        <!--        <item name="fontFamily">@font/poppins_regular</item>-->
    </style>

    <style name="main_heading">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="card_view_heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="card_view_heading_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="textBold">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="textExtraLight">
        <item name="android:fontFamily">@font/poppins_extra_light</item>
    </style>

    <style name="textThin">
        <item name="android:fontFamily">@font/poppins_thin</item>
    </style>

    <style name="textMedium">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        ...
        <item name="android:fontFamily">@font/poppins_medium</item>
        ...
    </style>

</resources>